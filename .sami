<?php

$dir = __DIR__ . '/src';

$iterator = Symfony\Component\Finder\Finder::create()
    ->files()
    ->name('*.php')
    ->exclude('Tests')
    ->in($dir);

$options = [
    'theme'                => 'default',
    'title'                => 'Elcodi API Documentation',
    'build_dir'            => __DIR__ . '/docs',
    'cache_dir'            => __DIR__ . '/docs/cache',
];

$sami = new Sami\Sami($iterator, $options);

return $sami;